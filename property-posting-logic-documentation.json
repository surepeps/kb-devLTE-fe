{
  "propertyPostingLogic": {
    "formFields": {
      "step0_propertyType": {
        "field": "propertyType",
        "type": "radio",
        "required": true,
        "options": ["sell", "rent", "jv", "shortlet"],
        "validation": "Must be one of the defined brief types",
        "description": "Primary property transaction type selection"
      },
      "step1_basicDetails": {
        "propertyCategory": {
          "field": "propertyCategory",
          "type": "select",
          "required": true,
          "options": ["Residential", "Commercial", "Land", "Mixed Development"],
          "conditional": "Available options depend on selected propertyType",
          "validation": "Must match allowed categories for the selected brief type"
        },
        "propertyCondition": {
          "field": "propertyCondition",
          "type": "radio",
          "required": "conditional",
          "options": ["new", "good-condition", "old"],
          "conditional": "Required for non-Land properties, NOT required for JV",
          "validation": "Required when propertyCategory != 'Land' AND propertyType != 'jv'"
        },
        "typeOfBuilding": {
          "field": "typeOfBuilding",
          "type": "select",
          "required": "conditional",
          "options": {
            "residential": ["bungalow", "duplex", "detached", "semi-detached", "block-of-flats", "penthouse", "terrace"],
            "commercial": ["offices", "studio", "retail-space", "showroom", "warehouse", "shopping-complex"],
            "shortlet": ["apartment", "duplex", "studio", "bungalow", "penthouse"]
          },
          "conditional": "Required for Residential/Commercial, NOT for Land or JV",
          "validation": "Required when propertyCategory in ['Residential', 'Commercial'] AND propertyType != 'jv'"
        },
        "rentalType": {
          "field": "rentalType",
          "type": "radio",
          "required": "conditional",
          "options": ["Rent", "Lease"],
          "conditional": "Only for rent propertyType",
          "validation": "Required when propertyType == 'rent'"
        },
        "shortletDuration": {
          "field": "shortletDuration",
          "type": "radio",
          "required": "conditional",
          "options": ["Daily", "Weekly", "Monthly"],
          "conditional": "Only for shortlet propertyType",
          "validation": "Required when propertyType == 'shortlet'"
        },
        "price": {
          "field": "price",
          "type": "currency",
          "required": true,
          "validation": "Must be positive number, stored as numeric value",
          "format": "Nigerian Naira (â‚¦)",
          "processing": "Input formatted as currency, stored as numeric value"
        },
        "leaseHold": {
          "field": "leaseHold",
          "type": "text",
          "required": "conditional",
          "conditional": "Required when rentalType == 'Lease'",
          "validation": "Must be numeric value (years)",
          "description": "Duration of lease in years"
        },
        "measurementType": {
          "field": "measurementType",
          "type": "select",
          "required": "conditional",
          "options": ["Plot", "Acres", "Square Meter"],
          "conditional": "Required for all Sell, all JV, Commercial Rent, and all Land properties",
          "validation": "Required when propertyType in ['sell', 'jv'] OR (propertyType == 'rent' AND propertyCategory == 'Commercial') OR propertyCategory == 'Land'"
        },
        "landSize": {
          "field": "landSize",
          "type": "text",
          "required": "conditional",
          "conditional": "Required for all Sell, all JV, Commercial Rent, and all Land properties",
          "validation": "Must be numeric, depends on measurementType being selected first",
          "format": "Numeric with commas for display"
        },
        "location": {
          "state": {
            "field": "state",
            "type": "searchable_select",
            "required": true,
            "dataSource": "Nigerian states data",
            "format": "{ value: string, label: string }"
          },
          "lga": {
            "field": "lga",
