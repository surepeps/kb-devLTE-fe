    "validationRules": {
      "stepValidation": {
        "step0": {
          "required": ["propertyType"],
          "logic": "propertyType must be selected"
        },
        "step1": {
          "base_required": ["propertyCategory", "state", "lga", "area", "price"],
          "conditional_required": {
            "rent": {
              "always": ["rentalType"],
              "non_land": ["propertyCondition", "typeOfBuilding", "bedrooms"],
              "commercial": ["measurementType", "landSize"],
              "land_lease": {
                "condition": "propertyCategory == 'Land' AND rentalType == 'Lease'",
                "fields": ["leaseHold"]
              }
            },
            "shortlet": {
              "always": ["shortletDuration", "propertyCondition", "typeOfBuilding", "bedrooms", "streetAddress", "maxGuests"]
            },
            "jv": {
              "always": ["measurementType", "landSize"],
              "note": "JV NEVER requires propertyCondition, typeOfBuilding, or bedrooms"
            },
            "sell": {
              "non_land": ["propertyCondition", "typeOfBuilding", "bedrooms"],
              "always": ["measurementType", "landSize"]
            },
            "land_category": {
              "condition": "propertyCategory == 'Land'",
              "fields": ["measurementType", "landSize"]
            }
          }
        },
        "step2": {
          "base_required": ["isTenanted"],
          "conditional_required": {
            "sell_jv_documents": {
              "condition": "propertyType in ['sell', 'jv']",
              "fields": ["documents"],
              "validation": "At least one document required"
            },
            "jv_conditions": {
              "condition": "propertyType == 'jv'",
              "fields": ["jvConditions"],
              "validation": "At least one JV condition required"
            },
            "shortlet_detailed": {
              "condition": "propertyType == 'shortlet'",
              "fields": ["availability.minStay", "pricing.nightly", "houseRules.checkIn", "houseRules.checkOut"],
              "validation": "All shortlet pricing and rules required"
            }
          }
        },
        "step3": {
          "required": ["images"],
          "validation": "Minimum 4 valid images required"
        },
        "step4": {
          "required": [
            "contactInfo.firstName", "contactInfo.lastName", 
            "contactInfo.email", "contactInfo.phone", "isLegalOwner"
          ]
        }
      },
      "fieldValidation": {
        "price": {
          "type": "positive_number",
          "message": "Price must be a positive number"
        },
        "email": {
          "type": "email_format",
          "message": "Please enter a valid email address"
        },
        "phone": {
          "type": "nigerian_phone",
          "pattern": "^(\\+234|0)[789][01]\\d{8}$",
          "message": "Please enter a valid Nigerian phone number"
        },
        "names": {
          "type": "letters_spaces_only",
          "pattern": "^[a-zA-Z\\s]+$",
          "min": 2,
          "max": 50
        },
        "landSize": {
          "type": "positive_number",
          "dependency": "measurementType must be selected first"
        },
        "maxGuests": {
          "type": "number",
          "min": 1,
          "max": 50
        },
        "minStay": {
          "type": "number",
          "min": 1
        },
        "weeklyDiscount": {
          "type": "percentage",
          "min": 0,
          "max": 100
        },
        "monthlyDiscount": {
          "type": "percentage",
          "min": 0,
          "max": 100
        }
      },
      "conditionalDisplay": {
        "propertyCondition": "propertyType != 'jv' AND propertyCategory != 'Land'",
        "typeOfBuilding": "propertyType != 'jv' AND propertyCategory in ['Residential', 'Commercial']",
        "bedrooms": "propertyType != 'jv' AND propertyCategory in ['Residential', 'Commercial']",
        "bathrooms": "propertyType != 'jv' AND propertyCategory in ['Residential', 'Commercial']",
        "toilets": "propertyType != 'jv' AND propertyCategory in ['Residential', 'Commercial']",
        "landSize": "propertyType in ['sell', 'jv'] OR (propertyType == 'rent' AND propertyCategory == 'Commercial') OR propertyCategory == 'Land'",
        "rentalType": "propertyType == 'rent'",
        "leaseHold": "propertyType == 'rent' AND rentalType == 'Lease'",
        "documents": "propertyType in ['sell', 'jv']",
        "jvConditions": "propertyType == 'jv'",
        "rentalConditions": "propertyType == 'rent' AND propertyCategory != 'Land'",
        "employmentType": "propertyType == 'rent' AND propertyCategory != 'Land'",
        "tenantGenderPreference": "propertyType == 'rent' AND propertyCategory != 'Land'",
        "shortletFields": "propertyType == 'shortlet'",
        "features": "propertyType != 'jv'"
      }
    },
